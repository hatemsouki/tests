<phpunit
   bootstrap="src/Test/bootstrap.php"
   colors="true">

    <testsuites>
        <testsuite name="unit">
            <directory suffix="Test.php">src/Test/Unit</directory>
        </testsuite>
    </testsuites>

    
  <coverage processUncoveredFiles="true">
       
           
            <exclude>
                <directory suffix=".php">src/Test</directory>
            </exclude>
       
   </coverage>

</phpunit>